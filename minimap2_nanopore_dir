#	sample_name=$0; gsub(".fastq","",sample_name)
#	cmd=hpcopt" minimap2_nanopore "ref" "indir"/"$0" "outdir"/"sample_name".sam"; 
#	print cmd; 
#	system(cmd);
#
#}'




