#!/bin/bash
if [ $# -ne 4 ] ; then
        echo "minimap2_nanopore_dir reffile indir outdir nthread"
        exit 0
fi

reffile=$1
indir=$2
outdir=$3
nthread=$4

mkdir -p $outdir

for infile in $(ls $indir | egrep '*.(fa|fq|fastq|fasta)$'); do
	sample_name=${infile%.*}
	cmd="submitjob 2 -c $nthread -m 8 -P acc_LymeMIND -q premium minimap2_nanopore $reffile $indir/$infile $outdir/$sample_name.sam $nthread"
	#cmd="minimap2_nanopore $reffile $indir/$infile $outdir/$sample_name.sam $nthread"
	echo $cmd
	$cmd
done



